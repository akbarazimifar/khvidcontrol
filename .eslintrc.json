{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true,
    "jquery": true,
    "amd": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "error", { "allow": ["warn", "error"] }
    ]
  },
  "overrides": [
    {
      "files": [ "public/js/*.js", "src/*.js" ]
    }
  ],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "globals": {
    "console": true,
    "_": true,
    "feathers": true,
    "io": true,
    "webRtcCtx": true,
    "reconnectWebRTCVideoConnection": true,
    "startWebRTCVideoConnection": true,
    "WebRtcStreamer": true,
    "startPolymaker": true,
    "initPolymaker": true
  }
}
