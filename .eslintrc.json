{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true,
    "jquery": true,
    "amd": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "overrides": [
    {
      "files": [ "public/js/*.js", "src/*.js" ]
    }
  ],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "globals": {
    "_": true,
    "feathers": true,
    "io": true
  }
}
